lalt - return : open -n /Applications/iTerm.app
lalt - w : open -n /Applications/Firefox.app

# Move windows
shift + lalt - h : yabai -m window --swap west
shift + lalt - j : yabai -m window --swap south
shift + lalt - k : yabai -m window --swap north
shift + lalt - l : yabai -m window --swap east

# Focus windows
lalt - h : yabai -m window --focus west
lalt - j : yabai -m window --focus south
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east

shift + lctrl + lalt - h : yabai -m window --warp west
shift + lctrl + lalt - j : yabai -m window --warp south
shift + lctrl + lalt - k : yabai -m window --warp north
shift + lctrl + lalt - l : yabai -m window --warp east

shift + lctrl + cmd + lalt - r : yabai -m space --rotate 90

shift + lctrl + cmd + lalt - f : yabai -m window --toggle zoom-fullscreen
shift + lctrl + cmd + lalt - t : yabai -m window --toggle float

shift + lctrl + cmd + lalt - b : yabai -m window --insert south
shift + lctrl + cmd + lalt - v : yabai -m window --insert east

shift + lctrl + cmd + lalt - 0x12 : yabai -m space --focus 1
shift + lctrl + cmd + lalt - 0x13 : yabai -m space --focus 2
shift + lctrl + cmd + lalt - 0x14 : yabai -m space --focus 3
shift + lctrl + cmd + lalt - 0x15 : yabai -m space --focus 4
shift + lctrl + cmd + lalt - 0x17 : yabai -m space --focus 5
shift + lctrl + cmd + lalt - 0x16 : yabai -m space --focus 6
shift + lctrl + cmd + lalt - 0x1A : yabai -m space --focus 7
shift + lctrl + cmd + lalt - 0x1C : yabai -m space --focus 8
shift + lctrl + cmd + lalt - 0x19 : yabai -m space --focus 9
shift + lctrl + cmd + lalt - 0x1D : yabai -m space --focus 10

shift + lctrl + lalt - 0x12 : yabai -m window --space 1
shift + lctrl + lalt - 0x13 : yabai -m window --space 2
shift + lctrl + lalt - 0x14 : yabai -m window --space 3
shift + lctrl + lalt - 0x15 : yabai -m window --space 4
shift + lctrl + lalt - 0x17 : yabai -m window --space 5
shift + lctrl + lalt - 0x16 : yabai -m window --space 6
shift + lctrl + lalt - 0x1A : yabai -m window --space 7
shift + lctrl + lalt - 0x1C : yabai -m window --space 8
shift + lctrl + lalt - 0x19 : yabai -m window --space 9
shift + lctrl + lalt - 0x1D : yabai -m window --space 10

# Resize windows
lctrl + lalt - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

lctrl + lalt - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

lctrl + lalt - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

lctrl + lalt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# show all scratchpad windows if inaccessible due to yabai restart or crash
cmd + lalt - r : yabai -m window --scratchpad recover

# toggle scratchpad windows or launch application if not running
cmd + lalt - s : yabai -m window --toggle spotify || open  -a Spotify
